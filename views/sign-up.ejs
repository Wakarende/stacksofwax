<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">
    <link rel="stylesheet" href="form.css">
</head>

<body>
    <div class="d-flex">
        <div id="sidebar" class="sidebar">
            <h4>Browse</h4>
            <ul class="list-unstyled">
                <li><a href="/page1">Link 1</a></li>
                <li><a href="/page2">Link 2</a></li>
            </ul>
            <h4>Library</h4>
            <ul class="list-unstyled">
                <li><a href="/collections">Collections</a></li>
                <li><a href="/likes">Likes</a></li>
            </ul>
        </div>
        <div id="content" class="content">
            <!-- navbar -->
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="container">
                    <button id="collapseButton" class="collapse-button" type="button">
                        <i class="fas fa-bars"></i>
                    </button>
                    <a class="navbar-brand" href="/">Logo</a>
                    <div class="search-container">
                        <form class="d-flex">
                            <div class="search-input">
                                <input type="search" class="form-control rounded" placeholder="Search"
                                    aria-label="Search">
                                <button class="search-button" type="submit">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </nav>
            <!-- sidebar  -->
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
            <script>
                $(document).ready(function () {
                    const sidebar = $("#sidebar");
                    const content = $("#content");
                    const collapseButton = $("#collapseButton");
                    let sidebarCollapsed = false;
                    collapseButton.on("click", function () {
                        sidebarCollapsed = !sidebarCollapsed;
                        if (sidebarCollapsed) {
                            sidebar.addClass("collapsed-sidebar");
                            content.addClass("collapsed-content");
                        } else {
                            sidebar.removeClass("collapsed-sidebar");
                            content.removeClass("collapsed-content");
                        }
                    });
                });
            </script>
</body>

</html>