<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Collections</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">
    <link rel="stylesheet" href="vinyls.css">
</head>

<body>
    <div class="container-fluid">
        <!-- navbar -->
        <nav class="navbar navbar-expand-lg bg-white navbar-custom fixed-top">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebar"
                    aria-controls="sidebar">
                    <span class="navbar-toggler-icon">
                        <i class="bi bi-list"></i>
                    </span>
                </button>
                <a class="navbar-brand text-black d-none d-lg-block" href="/">StacksOfWax</a>
                <div class="search-container">
                    <form class="d-flex">
                        <div class="search-input">
                            <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search"
                                aria-describedby="search-addon">
                            <button class="btn search-button" type="submit" id="search-addon">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/collections">Collections</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/sign-up">Sign up</a>
                        </li>
                        <li class="nav-item sign-up">
                            <i class="bi bi-person-fill"></i>
                            <a class="nav-link text-white" href="/logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- END navbar -->
        <!-- Sidebar  -->
        <div class="row">
            <nav id="sidebar" class="col-md-2 col-lg-1 d-md-block sidebar offcanvas-collapse">
                <a href="/" class="navbar-brand d-lg-none text-black">StacksOfWax</a>
                <div class="sidebar-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="/vinyls"> Vinyls</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/collections"> Collections </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/profile"> My Library</a>
                        </li>
                    </ul>
                    <ul class="nav flex-column d-lg-none">
                        <li class="nav-item">
                            <a href="/collections" class="nav-link">Collections</a>
                        </li>
                        <li class="nav-item">
                            <a href="/sign-up" class="nav-link">Sign up</a>
                        </li>
                        <li class="nav-item">
                            <a href="/logout" class="nav-link">Logout</a>
                        </li>
                    </ul>
                </div>
            </nav>
            <!-- END Sidebar  -->
            <!-- MAIN content  -->
            <div class="main-content container-fluid col-lg-9">
                <div class="d-flex justify-content-start">
                </div>
                <div class="row ">
                    <div class="col d-flex justify-content-center">
                        <form method="GET" action="/vinyls">
                            <button class="btn btn-small" type="sub
                        " name="genre" value="Pop">Pop</button>
                        </form>
                        <form method="GET" action="/vinyls">
                            <button class="btn btn-small" type="sub
                        " name="genre" value="HipHop">HipHop</button>
                        </form>
                        <form method="GET" action="/vinyls">
                            <button class="btn btn-small" type="sub
                        " name="genre" value="Electronic">Electronic</button>
                        </form>
                        <form method="GET" action="/vinyls">
                            <button class="btn btn-small" type="sub
                        " name="genre" value="RnB">R&B</button>
                        </form>
                        <form method="GET" action="/vinyls">
                            <button class="btn btn-small" type="sub
                        " name="genre" value="Afrobeats">Afrobeats</button>
                        </form>
                    </div>
                    <hr>
                </div>
                <div class="d-flex justify-content-center">
                    <div class="row card-container custom-row gx-1 mb-3 g-4">
                        <h3 class="fw-bold">Vinyls</h3> 
                        <%vinyls.forEach((vinyl) => {%> <div class="col-md-3">
                            <a href="/vinyls/<%=vinyl.vinyl_id%>" class="singleAlbum">
                                <div class="card  text-white vinyl-cards">
                                    <img class="card-img" src="<%=vinyl.cover_image%>" alt="Card image">
                                    <div class="card-img-overlay overlay-dark d-flex flex-column justify-content-end">
                                        <small class="card-title"><%=vinyl.title%></small>
                                    </div>
                                </div>
                            </a>
                        </div> <%})%>
                    </div>
                </div>
            </div>
        </div>
        <!-- END Main Content  -->
        <!-- Footer  -->
        <div class="container">
            <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top"
                style="margin-left: 15rem;">
                <div class="col-md-4 d-flex align-items-center">
                    <span class="mb-3 mb-md-0 text-muted">&copy; StacksOfWax</span>
                </div>
                <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
                    <li class="ms-3"><a class="text-muted" href="#"><i class="bi bi-twitter"
                                style="font-size: 24px;"></i></a></li>
                    <li class="ms-3"><a class="text-muted" href="#"><i class="bi bi-instagram"
                                style="font-size: 24px;"></i></a></li>
                    <li class="ms-3"><a class="text-muted" href="#"><i class="bi bi-facebook"
                                style="font-size: 24px;"></i></a></li>
                </ul>
            </footer>
        </div>
        <!-- END Footer  -->
    </div>
    <!-- media queries  -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelector('[data-bs-toggle="offcanvas"]').addEventListener('click', function () {
                document.querySelector('.offcanvas-collapse').classList.toggle('open')
            })
        })
    </script>
    <!-- Filter  -->
    <script>
        document.getElementById('sortGenre').addEventListener('click', () => {
            fetchVinyls('genre');
        });
        document.getElementById('sortYear').addEventListener('click', () => {
            fetchVinyls('year');
        });
    </script>
    <!-- Bootstrap  -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>