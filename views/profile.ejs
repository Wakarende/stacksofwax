<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Collections</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">
    <link rel="stylesheet" href="profile.css">
</head> 
<body>
    <div class="container-fluid">
    <!-- navbar -->
        <nav class="navbar navbar-expand-lg bg-white navbar-custom fixed-top">
            <div class="container">
                <a class="navbar-brand" href="/">Logo</a>
                <div class="search-container">
                    <form class="d-flex">
                        <div class="search-input">
                            <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search"
                                aria-describedby="search-addon">
                            <button class="btn search-button" type="submit" id="search-addon">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/collections">Collections</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/sign-up">Sign up</a>
                        </li>
                        <li class="nav-item sign-up">
                            <i class="bi bi-person-fill"></i>
                            <a class="nav-link text-white" href="/logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- END navbar -->
        <!-- Sidebar  -->
        <div class="row">
            <nav id="sidebar" class="col-md-2 col-lg-1 d-md-block sidebar">
                <div class="sidebar-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="/vinyls"> Vinyls</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/collections"> Collections </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"> Library </a>
                        </li> <% if (session && session.user) {%> <li class="nav-item">
                            <a class="nav-link" href="/profile"> <%= session.user.username %> Collections </a>
                        </li> <% } %>
                    </ul>
                </div>
            </nav>
        </div>
        <!-- END Sidebar  -->
        <!-- MAIN content  -->
        <div class="main-content container-fluid">
            <!-- Profile card  -->
            <div class="card mb-3 shadow profile-card" style="max-width: 880px; margin-left: 280px;">
              
                    <div class="row g-0">
                        <div class="col-md-4">
                                <img src="img/jakayla-toney-7S__5PvMaGY-unsplash.jpg" class="img-fluid rounded-circle collection-img"
                                    alt="collection_image">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <div class="collection-flex mt-5">
                                    <h5 class="card-title text-black fw-bold"><%= session.user.username %></h5>
                                        <a href="/create-collection" class="single-album">
                                        <small class="card-text  my-3"><i class="bi bi-plus-square-fill  me-2"></i>Create New Collection</small>
                                        </a>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
            <!-- END Profile card  -->
           <!-- Users Collections -->
           <div class="title">
               <h5 class="profile-title mt-5 fw-bold">Collections</h5>
           </div>
           <div class="justify-content-center mt-5 collections-container"> <% collections.forEach((collection) => { %>
               <div class="" style="gap: 10px">
                   <a href="/collections/<%=collection.collection_id%>" class="card-link text-decoration-none">
                       <div class="card h-100 collection-card">
                           <img class="card-img-top img-fluid" src="<%=collection.collection_image %>"
                               alt="collection_image" width="100%">
                           <div class="card-body">
                               <h5 class="card-title fw-bold"><%= collection.collection_name %></h5>
                           </div>
                       </div>
                   </a>
               </div> <% }); %> </div>
           <!-- END user collections -->
           <!-- User Vinyls -->
           <div class="title">
               <h5 class="profile-title mt-5 fw-bold">Vinyls</h5>
           </div>
           <div class="justify-content-center mt-5 collections-container"> 
               <% uniqueVinyls.forEach((vinyl) => { %> 
                <div class="" style="gap: 10px">
                   <div class="card h-100 collection-card">
                       <img class="card-img-top img-fluid" src="<%= vinyl.vinyl_image %>" alt="vinyl_image"
                           width="100%">
                       <div class="card-body">
                           <h5 class="card-title fw-bold"><%= vinyl.vinyl_title %></h5>
                       </div>
                   </div>
               </div> <% }); %> </div>
           <!-- END user vinyls --
        </div>
        <!-- END Main Content  -->
        <!-- Footer  -->
        <div class="container">
            <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top"
                style="margin-left: 15rem;">
                <div class="col-md-4 d-flex align-items-center">
                    <span class="mb-3 mb-md-0 text-muted">&copy; StacksOfWax</span>
                </div>
                <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
                    <li class="ms-3"><a class="text-muted" href="#"><i class="bi bi-twitter"
                                style="font-size: 24px;"></i></a></li>
                    <li class="ms-3"><a class="text-muted" href="#"><i class="bi bi-instagram"
                                style="font-size: 24px;"></i></a></li>
                    <li class="ms-3"><a class="text-muted" href="#"><i class="bi bi-facebook"
                                style="font-size: 24px;"></i></a></li>
                </ul>
            </footer>
        </div>
        <!-- END Footer  -->
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>