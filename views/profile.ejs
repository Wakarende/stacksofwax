<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Collections</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">
    <link rel="stylesheet" href="collections.css">
</head>

<body>
    <div class="container-fluid">
        <!-- navbar -->
        <nav class="navbar navbar-expand-lg bg-white navbar-custom fixed-top">
            <div class="container">
                <a class="navbar-brand" href="/">Logo</a>
                <div class="search-container">
                    <form class="d-flex">
                        <div class="search-input">
                            <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search"
                                aria-describedby="search-addon">
                            <button class="btn search-button" type="submit" id="search-addon">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/collections">Collections</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/sign-up">Sign up</a>
                        </li>
                        <li class="nav-item sign-up">
                            <i class="bi bi-person-fill"></i>
                            <a class="nav-link text-white" href="/logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- END navbar -->
        <!-- Sidebar  -->
        <div class="row">
            <nav id="sidebar" class="col-md-2 col-lg-1 d-md-block sidebar">
                <div class="sidebar-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="#"> Browse </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/collections"> Collections </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"> Library </a>
                        </li> <% if (session && session.user) {%> <li class="nav-item">
                            <a class="nav-link" href="/profile"> <%= session.user.username %> Collections </a>
                        </li> <% } %>
                    </ul>
                </div>
            </nav>
        </div>
        <!-- END Sidebar  -->
        <!-- MAIN content  -->
        <div class="main-content">
            <!-- Profile card  -->
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col col-md-9 col-lg-7 col-xl-5">
                        <div class="card profile-card">
                            <div class="card-body p-4">
                                <div class="d-flex text-black">
                                    <div class="flex-shrink-0">
                                        <img src=""
                                            alt="Generic placeholder image" class="img-fluid"
                                            style="width: 180px; border-radius: 10px;">
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <% if (session && session.user) { %>
                                        <h5 class="mb-1"><%= session.user.username %></h5>
                                        <% } %>
                                        <p class="mb-2 pb-1"> Will we have an edit profile section?</p>
                                        <div class="d-flex justify-content-start rounded-3 p-2 mb-2"
                                            style="background-color: #efefef;">
                                            <div>
                                            </div>
                                            <div class="px-3">
                                            </div>
                                            <div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END Profile card  -->
            <!-- Users Collections  -->
            <div class="row row-cols-1 row-cols-md-4 g-4 mt-3">
            <% collections.forEach((collection) => { %>
            <div class="col">
                <a href="/collections/<%=collection.collection_id%>" class="card-link text-decoration-none">
                <div class="card h-100">
                    <img class="card-img-top img-fluid" src="<%= collection.collection_image %>"
                                alt="collection_image" width="100%">
                    <div class="card-body">
                        <h5 class="card-title fw-bold"><%= collection.collection_name %></h5>
                    </div>
                </div>
                </a>
            </div>
            <% }); %>
            </div>
        </div>
        <!-- END Main Content  -->
        <!-- Footer  -->
        <div class="container">
            <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top"
                style="margin-left: 15rem;">
                <div class="col-md-4 d-flex align-items-center">
                    <span class="mb-3 mb-md-0 text-muted">&copy; StacksOfWax</span>
                </div>
                <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
                    <li class="ms-3"><a class="text-muted" href="#"><i class="bi bi-twitter"
                                style="font-size: 24px;"></i></a></li>
                    <li class="ms-3"><a class="text-muted" href="#"><i class="bi bi-instagram"
                                style="font-size: 24px;"></i></a></li>
                    <li class="ms-3"><a class="text-muted" href="#"><i class="bi bi-facebook"
                                style="font-size: 24px;"></i></a></li>
                </ul>
            </footer>
        </div>
        <!-- END Footer  -->
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>