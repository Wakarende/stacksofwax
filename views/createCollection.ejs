!DOCTYPE html> <html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Collections</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">
    <link rel="stylesheet" href="collections.css">
</head>

<body>
    <div class="container-fluid">
        <!-- navbar -->
        <nav class="navbar navbar-expand-lg bg-white navbar-custom fixed-top">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebar"
                    aria-controls="sidebar">
                    <span class="navbar-toggler-icon">
                        <i class="bi bi-list"></i>
                    </span>
                </button>
                <a class="navbar-brand logo d-none d-lg-block" href="/">StacksOfWax</a>
                <div class="search-container">
                    <form class="d-flex">
                        <div class="search-input">
                            <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search"
                                aria-describedby="search-addon">
                            <button class="btn search-button" type="submit" id="search-addon">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/collections">Collections</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/sign-up">Sign up</a>
                        </li>
                        <li class="nav-item sign-up">
                            <i class="bi bi-person-fill"></i>
                            <a class="nav-link text-white" href="/logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- END navbar -->
        <!-- Sidebar  -->
        <div class="row">
            <nav id="sidebar" class="col-md-2 col-lg-1 d-md-block sidebar offcanvas-collapse">
                <a href="/" class="navbar-brand d-lg-none text-black">StacksOfWax</a>
                <div class="sidebar-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="/vinyls"> Vinyls</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/collections"> Collections </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/profile"> My Library</a>
                        </li>
                    </ul>
                    <ul class="nav flex-column d-lg-none">
                        <li class="nav-item">
                            <a href="/collections" class="nav-link">Collections</a>
                        </li>
                        <li class="nav-item">
                            <a href="/sign-up" class="nav-link">Sign up</a>
                        </li>
                        <li class="nav-item">
                            <a href="/logout" class="nav-link">Logout</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
        <!-- END Sidebar  -->
        <!-- MAIN content  -->
        <div class="main-content container">
            <div class="signin-container p-4 bg-white shadow rounded">
                <h2 class="mb-4">Create Collection</h2>
                <form action="/create-collection" method="POST">
                    <div class="mb-3">
                        <label for="collecitonName" class="form-label">Name</label>
                        <input type="text" class="form-control" id="collectionName" name="collectionName">
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea type="text" class="form-control" id="description" name="description"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="collecitonImage" class="form-label">Image url</label>
                        <input type="text" class="form-control" id="collectionImage" name="collectionImage">
                    </div>
                    <button type="submit" class="btn form-btn btn-primary">Create</button>
                </form>
            </div>
        </div>
        <!-- END Main Content  -->
        <!-- Footer  -->
        <div class="container">
            <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top"
                style="margin-left: 15rem;">
                <div class="col-md-4 d-flex align-items-center">
                    <span class="mb-3 mb-md-0 text-muted">&copy; StacksOfWax</span>
                </div>
                <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
                    <li class="ms-3"><a class="text-muted" href="#"><i class="bi bi-twitter"
                                style="font-size: 24px;"></i></a></li>
                    <li class="ms-3"><a class="text-muted" href="#"><i class="bi bi-instagram"
                                style="font-size: 24px;"></i></a></li>
                    <li class="ms-3"><a class="text-muted" href="#"><i class="bi bi-facebook"
                                style="font-size: 24px;"></i></a></li>
                </ul>
            </footer>
        </div>
        <!-- END Footer  -->
    </div>
     <!-- media queries navbar -->
     <script>
         document.addEventListener('DOMContentLoaded', function () {
             document.querySelector('[data-bs-toggle="offcanvas"]').addEventListener('click', function () {
                 document.querySelector('.offcanvas-collapse').classList.toggle('open')
             })
         })
     </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>